version="$(cat version.properties)"
version=`echo - | (echo $version | awk '{version=$1 ; print $version + 0.1}')`

echo "$version" > version.properties

echo -n "serverVersion=" > gradle.properties
echo "$version" >> gradle.properties

echo "gradle build" > run
echo -n "java -jar build/libs/inkstep-server-" >> run
echo -n "$version" >> run
echo ".jar" >> run